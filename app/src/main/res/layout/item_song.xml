<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:translationZ="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_songItem"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/mass_effect_cover_small" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_song_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/song_margin_left"
            android:gravity="start"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Battle At Eden Prime" />

        <TextView
            android:id="@+id/textView_song_artist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/song_margin_left"
            android:gravity="start"
            android:textSize="18sp"
            tools:text="Jeremy Soule" />

        <TextView
            android:id="@+id/textView_song_duration"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/song_margin_left"
            android:gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="05:32" />
    </LinearLayout>
</LinearLayout>